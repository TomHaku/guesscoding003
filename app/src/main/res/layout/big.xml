<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView_big1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:text="Lorem ipsum"
        android:textAlignment="center"
        android:textColor="#928A89"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imagebigr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        app:srcCompat="@mipmap/bigred" />

    <TextView
        android:id="@+id/textView_big2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:fontFamily="@font/consola"
        android:lineSpacingExtra="36sp"
        android:maxLength="4"
        android:text="####"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/imagebigg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/smallgrey" />

    <ImageButton
        android:id="@+id/imageButton_big1"
        android:layout_width="140dp"
        android:layout_height="138dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@mipmap/nonono"
        android:onClick="onclick_buttonfalse"/>
</LinearLayout>