<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/textView_correct1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="You got it!"
        android:textAlignment="center"
        android:textColor="#D36962"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textView_correct2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="120dp"
        android:fontFamily="@font/consola"
        android:lineSpacingExtra="36sp"
        android:maxLength="4"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageButton
        android:id="@+id/imageButton_correct1"
        android:layout_width="140dp"
        android:layout_height="138dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:srcCompat="@mipmap/correct"
        android:onClick="onclick_buttoncorrect"/>


</LinearLayout>